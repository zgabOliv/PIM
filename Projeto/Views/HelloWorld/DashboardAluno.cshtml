@using System.Security.Claims
@model Projeto.Models.Usuario

@{
    ViewData["Title"] = "Dashboard do Aluno";
    var nomeUsuario = Model.Nome;
    var turmas = ViewBag.Turmas as List<Projeto.Models.Turma>;
    var atividades = ViewBag.Atividades as List<Projeto.Models.Atividade>;
}

<div class="container py-5">

    <!-- Cabeçalho -->
    <div class="text-center mb-5">
        <h1 class="fw-bold">Bem-vindo, @nomeUsuario 👋</h1>
        <p class="text-muted">Aqui você pode acompanhar suas turmas, atividades e notas.</p>
    </div>

    <!-- Cards principais -->
    <div class="row g-4 justify-content-center">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <h5 class="card-title fw-semibold">Minhas Turmas</h5>
                    <p class="text-muted small">Visualize as turmas onde você está matriculado.</p>
                    <a asp-controller="Aluno" asp-action="Turmas" asp-route-id="@Model.TurmaId" class="btn btn-primary w-100">
                        Ver Turma
                    </a>
                    </a>

                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <h5 class="card-title fw-semibold">Atividades</h5>
                    <p class="text-muted small">Acesse, envie e acompanhe suas tarefas.</p>
                    <a asp-controller="Aluno" asp-action="Atividades" class="btn btn-success w-100">Ver Atividades</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center">
                    <h5 class="card-title fw-semibold">Notas</h5>
                    <p class="text-muted small">Verifique seu desempenho.</p>
                    <a asp-controller="Aluno" asp-action="Notas" class="btn btn-warning w-100">Ver Notas</a>
                </div>
            </div>
        </div>
    </div>


    <!-- Logout -->
    <div class="text-center mt-5">
        <a asp-controller="HelloWorld" asp-action="Logout" class="btn btn-outline-danger px-4">Sair</a>
    </div>

</div>
