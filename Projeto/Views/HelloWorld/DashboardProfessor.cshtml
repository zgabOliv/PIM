@using Projeto.Data
@using Projeto.Models
@using System.Security.Claims

@{
    ViewData["Title"] = "Dashboard do Professor";
    var nomeUsuario = User.FindFirst(ClaimTypes.Name)?.Value;

    // Carrega turmas do professor logado
    var repoTurmas = new RepositorioTurmasJson();
    var repoUsuarios = new RepositorioUsuariosJson();
    var professor = repoUsuarios.CarregarUsuarios()
                               .FirstOrDefault(u => u.Email == User.FindFirst(ClaimTypes.NameIdentifier)?.Value
                                                 && u.Perfil == "professor");
    var turmasDoProfessor = professor != null
                            ? repoTurmas.Listar().Where(t => t.Professor == professor.Id).ToList()
                            : new List<Turma>();
}


<div class="container mt-5 text-center">
    <h1 class="mb-4">Bem-vindo, Professor @nomeUsuario 👨‍🏫</h1>
    <p class="lead text-muted">Gerencie suas turmas, publique atividades e acompanhe seus alunos.</p>

    <div class="row mt-5">
        <!-- Minhas Turmas -->
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Minhas Turmas</h5>
                    <p class="card-text">Veja e edite as turmas que você ministra.</p>
                    <a asp-controller="Turma" asp-action="Index" class="btn btn-primary">Gerenciar Turmas</a>
                </div>
            </div>
        </div>

        <!-- Criar Nova Turma -->
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Criar Nova Turma</h5>
                    <p class="card-text">Adicione uma nova turma ao sistema.</p>
                    <a asp-controller="Turma" asp-action="CriarTurma" class="btn btn-success">Criar Turma</a>
                </div>
            </div>
        </div>

        <!-- Criar Atividade -->
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Criar Atividade</h5>
                    <p class="card-text">Publique novas atividades para os alunos.</p>
                    <a asp-controller="Atividade" asp-action="Criar" class="btn btn-warning">Criar Atividade</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Ver Alunos -->
    <div class="col-md-4 mb-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Alunos das Minhas Turmas</h5>
                <p class="card-text">Clique para ver os alunos cadastrados.</p>

                @if (turmasDoProfessor.Any())
                {
                    @foreach (var turma in turmasDoProfessor)
                    {
                        <a asp-controller="Turma" asp-action="VerAlunos" asp-route-id="@turma.Id" class="btn btn-info mb-2">
                            @turma.Nome
                        </a>
                    }
                }
                else
                {
                    <div class="alert alert-warning mt-2">Você não possui turmas cadastradas ainda.</div>
                }
            </div>
        </div>
    </div>


    <div class="col-md-4 mb-3">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Atividades Criadas</h5>
                <p class="card-text">Veja, edite ou corrija as atividades já publicadas.</p>
                <a asp-controller="Atividade" asp-action="Index" class="btn btn-info">Ver Atividades</a>
            </div>
        </div>
    </div>

    <div class="mt-5">
        <a asp-controller="HelloWorld" asp-action="Logout" class="btn btn-outline-danger">Sair / Logout</a>
    </div>
</div>
