@model List<Projeto.Models.Turma>

<h2>Minhas Turmas</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Curso</th>
                <th>Período</th>
                <th>Ano</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var turma in Model)
            {
                <tr>
                    <td>@turma.Id</td>
                    <td>@turma.Nome</td>
                    <td>@turma.Curso</td>
                    <td>@turma.Periodo</td>
                    <td>@turma.Ano</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        Você não possui nenhuma turma cadastrada ainda.
    </div>
}
<a asp-controller="HelloWorld" asp-action="DashboardProfessor" class="btn btn-secondary">Voltar ao Dashboard</a>