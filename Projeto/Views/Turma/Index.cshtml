@model List<Turma>

<h2>Minhas Turmas</h2>

@if (Model.Count == 0)
{
    <p>Nenhuma turma cadastrada ainda.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Curso</th>
                <th>Período</th>
                <th>Ano</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var turma in Model)
            {
                <tr>
                    <td>@turma.Id</td>
                    <td>@turma.Nome</td>
                    <td>@turma.Curso</td>
                    <td>@turma.Periodo</td>
                    <td>@turma.Ano</td>
                </tr>
            }
        </tbody>
    </table>
}