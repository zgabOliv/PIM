@model Turma

<h2>Criar Nova Turma</h2>
<form asp-action="CriarTurma" method="post">
    <div class="form-group">
        <label>Nome</label>
        <input asp-for="Nome" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Curso</label>
        <input asp-for="Curso" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Período</label>
        <input asp-for="Periodo" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Ano</label>
        <input asp-for="Ano" type="number" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
</form>
