@model Projeto.ViewModels.EntregaAlunoViewModel

<h2>Enviar Resposta - @Model.TituloAtividade</h2>

<form asp-action="EnviarAtividade" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="AtividadeId" />

    <div class="form-group mb-3">
        <label asp-for="RespostaAluno" class="form-label">Sua Resposta</label>
        <textarea asp-for="RespostaAluno" class="form-control" rows="5" required></textarea>
    </div>

    <div class="form-group mb-3">
        <label>Arquivo (opcional)</label>
        <input asp-for="ArquivoAluno" type="file" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Enviar</button>
    <a asp-controller="Aluno" asp-action="Atividades" class="btn btn-secondary">Voltar</a>
</form>
